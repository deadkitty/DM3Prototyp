<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<ControlTemplate x:Key="GrammarStyleButton" TargetType="{x:Type Button}">
		<Grid>
			<Rectangle Stroke="Black" RadiusY="1.75" RadiusX="1.75" StrokeThickness="0">
				<Rectangle.Fill>
					<ImageBrush ImageSource="/Prototype;component/Resources/Images/icons/Menue/grammarExcercise.png"/>
				</Rectangle.Fill>
			</Rectangle>
			<Rectangle x:Name="rectangle" Stroke="Black" RadiusY="1.75" RadiusX="1.75" StrokeThickness="0" Opacity="0">
				<Rectangle.Fill>
					<ImageBrush ImageSource="/Prototype;component/Resources/Images/icons/Menue/grammarExcercise_over.png"/>
				</Rectangle.Fill>
			</Rectangle>
		</Grid>
		<ControlTemplate.Triggers>
			<Trigger Property="IsMouseOver" Value="True" SourceName="rectangle">
				<Setter Property="Opacity" TargetName="rectangle" Value="1"/>
			</Trigger>
		</ControlTemplate.Triggers>
		
	</ControlTemplate>
	<!-- Hier werden Einträge für Ressourcenverzeichnisse definiert. -->
</ResourceDictionary>