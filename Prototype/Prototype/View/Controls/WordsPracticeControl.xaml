    	<Label Content="Wort eingeben" HorizontalAlignment="Left" Height="45" Margin="155,0,0,69" VerticalAlignment="Bottom" Width="196.253" FontSize="26.667"/>
    	<TextBlock Margin="351.253,0,8,157.47" TextWrapping="Wrap" Text="Gesuchtes wort" Name="translationTextblock" FontSize="26.667" VerticalAlignment="Bottom"/>
    	<TextBlock Margin="351.253,0,8,118" TextWrapping="Wrap" Text="Richtige Antwort" x:Name="correctAnswerTextblock" FontSize="26.667" VerticalAlignment="Bottom"/>
        <Image     Margin="351.253,8,0,0" Name="imageBox" Height="245" HorizontalAlignment="Left" Stretch="Uniform"  VerticalAlignment="Top" Width="517" Source="/Prototype;component/Resources/Images/arzt.jpg" />
    </Grid>
